struct ExtentPointer {
    offset: u64,
    len: u64,
}

struct ObjectPointer {
    ep: ExtentPointer,

}


trait NVBlockDevice
- read(offset, len) -> Vec<u8>
- write(offset, Vec<u8>)

trait NVObjectCache
-get(&op) -> Rc<NVObject>
-insert(&op, NVObject)

struct NVObjectDevice
# responsible for serialization, compression, checksuming and type check and caching
+ NVBlockDevice
+ NVObjectCache
- read(&op) -> Rc<NVObject>
- write(offset, NVObject) -> op

struct NVObjectManager
# responsible for space allocation
+ NVObjectDevice
-read(&op) -> Rc<NVObject>
-write(NVObject) -> op
-commit(Uberblock)
-load(Uberblock)









